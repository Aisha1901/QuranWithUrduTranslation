<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradient_bg"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/reciter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_reciter"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Select Reciter"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/green_500" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reciders_main_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            card_view:layout_constraintTop_toBottomOf="@id/reciter_layout"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/reciter_1_layout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="12dp"
            card_view:cardCornerRadius="8dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/reciter_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/reciter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/green_500"
                    android:gravity="center"
                    android:text="Hani Ar-Rifai"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/reciter_2_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            card_view:cardCornerRadius="8dp"
            android:layout_margin="12dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/reciter_1_layout"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/reciter_1_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/reciter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/green_500"
                    android:gravity="center"
                    android:text="Hani Ar-Rifai"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/reciter_3_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            card_view:cardCornerRadius="8dp"
            android:layout_margin="12dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/reciter_2_layout"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/reciter_2_layout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/reciter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/green_500"
                    android:gravity="center"
                    android:text="Hani Ar-Rifai"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reciter_4_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="@+id/reciders_main_layout"
            card_view:layout_constraintStart_toStartOf="@+id/reciders_main_layout"
            card_view:layout_constraintTop_toBottomOf="@+id/reciders_main_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                card_view:cardCornerRadius="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                card_view:layout_constraintBottom_toBottomOf="@+id/reciter_2_layout"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/reciter_2_layout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/reciter" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/green_500"
                        android:gravity="center"
                        android:text="Hani Ar-Rifai"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/reciter_4_layout">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_settings"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green_500"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/translation_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            card_view:layout_constraintTop_toBottomOf="@id/setting_layout">

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="0dp"
                android:checked="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:text="Translation"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="0dp"
                android:checked="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:text="Transliteration"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/green_500"
            card_view:layout_constraintTop_toBottomOf="@id/translation_setting_layout">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:background="@color/green_500"
                android:src="@drawable/ic_text_icon"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green_700"
                android:gravity="center"
                android:text="Font Size"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/text_size_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            card_view:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/green_700"
            card_view:layout_constraintTop_toBottomOf="@id/text_setting_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="قرآن"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_height="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    card_view:cardCornerRadius="12dp"
                    android:backgroundTint="@color/green_500"
                    android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="+"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:layout_height="match_parent"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:background="@color/white"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="-"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <SeekBar
            card_view:layout_constraintTop_toBottomOf="@id/text_size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_size_progress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:id="@+id/text_font_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/green_500"
            card_view:layout_constraintTop_toBottomOf="@id/text_size_progress">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:background="@color/green_500"
                android:src="@drawable/ic_text_icon"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/green_700"
                android:gravity="center"
                android:text="Font Style"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_style_layout_1"
            card_view:layout_constraintTop_toBottomOf="@id/text_font_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="قرآن"
                android:textSize="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_bg"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="قرآن"
                android:textSize="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_bg"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            card_view:layout_constraintTop_toBottomOf="@id/text_style_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="قرآن"
                android:textSize="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_bg"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="قرآن"
                android:textSize="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_bg"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>