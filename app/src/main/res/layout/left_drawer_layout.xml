<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ebecf0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/surah_juz_layout"
            android:padding="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            card_view:cardElevation="5dp"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_height="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/nav_item_bg"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_rukus" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="Surah and Juz Rukus"
                android:textColor="@color/green_700"
                android:textSize="16sp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/saj_not_sign_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:weightSum="3"
            card_view:layout_constraintEnd_toEndOf="@+id/surah_juz_layout"
            card_view:layout_constraintStart_toStartOf="@+id/surah_juz_layout"
            card_view:layout_constraintTop_toBottomOf="@+id/surah_juz_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardMaxElevation="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:cardElevation="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_bg"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_sajda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Sajdha"
                    android:textColor="@color/green_700"
                    android:textSize="12sp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardElevation="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_bg"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_notifications" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Notifications"
                    android:textColor="@color/green_700"
                    android:textSize="12sp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_item_bg"
                android:gravity="center|center_vertical"
                android:orientation="vertical"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_rukus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="Stop Signs"
                    android:textColor="@color/green_700"
                    android:textSize="12sp" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ra_disc_share_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:weightSum="3"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/saj_not_sign_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Rate"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_desclimer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Desclimer"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Share"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:weightSum="3"
            card_view:layout_constraintTop_toBottomOf="@+id/ra_disc_share_layout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_contact" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Contact Us"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_privacy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Privacy"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                card_view:layout_constraintTop_toBottomOf="@+id/imageView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/nav_item_bg"
                    android:gravity="center|center_vertical"
                    android:orientation="vertical"
                    card_view:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_purchase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Purchase"
                        android:textColor="@color/green_700"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>